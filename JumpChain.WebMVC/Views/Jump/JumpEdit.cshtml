                @Html.ValidationMessageFor(model => model.JumpLocation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Companions, htmlAttributes: new { @class = "control-label col-md-2" })
