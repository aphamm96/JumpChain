@model Jumpchain.Models.JumpModels.JumpEdit

@{
    ViewBag.Title = "JumpEdit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="        background-color: #01126C;
        margin-top: 1em;
