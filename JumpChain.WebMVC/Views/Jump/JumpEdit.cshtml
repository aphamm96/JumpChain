            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Changes" class="btn btn-default" style="background-color: #00476B;
        color: #E8E8E8; box-shadow:2px 3px black" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Return to Jumpers", "JumperIndex", "Jumper")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
