@model Jumpchain.Models.JumperEdit

@{
    ViewBag.Title = "JumperEdit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="        background-color: #01126C;
        margin-top: 1em;
        padding: 0.5em;
        color: #E8E8E8;
        text-shadow: 3px 3px 0 black;
        border: solid 2px #E8E8E8;
        border-radius: 5px">
    <h4>Edit Jumper Details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.JumperID)

    <div class="form-group">
        @Html.LabelFor(model => model.JumperName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.JumperName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.JumperName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.JumperNotes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.JumperNotes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.JumperNotes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save Changes" class="btn btn-default" style="background-color: #00476B;
        color: #E8E8E8; box-shadow:2px 3px black" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Jumpers", "JumperIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
