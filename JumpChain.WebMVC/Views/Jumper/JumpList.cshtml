@model IEnumerable<JumpChain.Data.Jump>

@{
    ViewBag.Title = "JumpList";
}

<p>
    @Html.ActionLink("Create New Jump", "JumpCreate", "Jump")
</p>
<table class="table" style="        background-color: #01126C;
        margin-top: 1em;
        padding: 0.5em;
        color: #E8E8E8;
        text-shadow: 3px 3px 0 black;
        border: solid 2px #E8E8E8;
        border-radius: 5px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JumpID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JumpNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JumpLocation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.JumpID
            @*@Html.DisplayFor(modelItem => item.JumpID)*@
        </td>
        <td>
            @item.JumpNumber
            @*@Html.DisplayFor(modelItem => item.JumpNumber)*@
        </td>
        <td>
            @item.JumpLocation
            @*@Html.DisplayFor(modelItem => item.JumpLocation)*@
        </td>
        <td>
            @Html.ActionLink("Edit Jump", "JumpEdit", "Jump", new { id = item.JumpID }, null) |
            @Html.ActionLink("Jump Info", "JumpDetails", "Jump", new { id = item.JumpID }, null) |
            @Html.ActionLink("Delete Jump", "JumpDelete", "Jump", new { id = item.JumpID }, new {style = "color:red" })
        </td>
    </tr>
}

</table>

@foreach (var item in Model)
