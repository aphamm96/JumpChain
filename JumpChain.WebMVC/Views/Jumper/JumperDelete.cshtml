@model Jumpchain.Models.JumperDetail

@{
    ViewBag.Title = "JumperDelete";
}

<div style="        background-color: #01126C;
        margin-top: 1em;
        padding: 0.5em;
        color: #E8E8E8;
        text-shadow: 3px 3px 0 black;
        border: solid 2px #E8E8E8;
        border-radius: 5px">
<h3 style="color:darkred">Are you sure you want to send this Jumper home? This action cannot be undone!</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.JumperID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JumperID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JumperName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JumperName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JumperNotes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JumperNotes)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Send Home" class="btn btn-default" style="background-color: darkred; color: #E8E8E8; box-shadow:2px 3px black" />
            <br />
            <br />
            @Html.ActionLink("Back to Jumpers", "JumperIndex")
        </div>
    }
</div>
