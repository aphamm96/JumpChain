@model IEnumerable<Jumpchain.Models.JumperListItem>

@{
    ViewBag.Title = "JumperIndex";
}

    <h2 style="background-color: #01126C;
        margin-top: 1em;
        padding: 0.5em;
        color: #E8E8E8;
        text-shadow: 3px 3px 0 black;
        border: solid 2px #E8E8E8;
        border-radius: 5px">
        Your Jumpers
    </h2>

<p>
    @Html.ActionLink("Summon a Jumper", "JumperCreate")
</p>
@if (TempData.ContainsKey("SaveResult")) //Shows the Jumper Created popup
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table" style="        background-color: #01126C;
        padding: 0.5em;
        color: #E8E8E8;
        text-shadow: 3px 3px 0 black;
        border: solid 2px #E8E8E8;
        border-radius: 5px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JumperName)
        </th>
        <th>
            <p>List of Jumps</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JumperNotes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JumperName)
            </td>
            <td>
                @Html.ActionLink("Link to Jumps", "JumpList", new { id = item.JumperID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JumperNotes)
            </td>
            <td>
                @Html.ActionLink("Edit Jumper", "JumperEdit", new { id = item.JumperID }) |
                @*@Html.ActionLink("Details", "JumperDetails", new { id = item.JumperID }) |*@
                @Html.ActionLink("Send Home", "JumperDelete", new { id = item.JumperID }, new { style = "color:red" })
            </td>
        </tr>
    }

</table>
